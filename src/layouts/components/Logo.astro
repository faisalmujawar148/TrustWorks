---
import { Image } from "astro:assets";
import config from "@/config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block">
  {
    src || logo ? (
      <Image
        width={logo_width.replace("px", "") * 2}
        height={logo_height.replace("px", "") * 2}
        src={src ? src : logo}
        alt={title}
        style={{
          maxWidth: "100%",
          height: "auto",
        }}
        class="logo-image"
      />
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>

<style>
  .navbar-brand {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  .logo-image {
    max-width: 60%;
    height: auto;
  }
</style>
