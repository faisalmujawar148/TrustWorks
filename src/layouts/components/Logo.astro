---
import { Image } from "astro:assets";
import config from "@/config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block md:w-[150px] lg:w-auto">
  {
    src || logo ? (
      <Image
        width={logo_width.replace("px", "") * 10000}
        height={logo_height.replace("px", "") * 10}
        src={src ? src : logo}
        alt={title}
        style={{
          height: "150px",
          width: "300px",
        }}
      />
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
